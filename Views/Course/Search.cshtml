@model List<Course>
@{
    ViewData["Title"] = "Search";
}

<h1>Search Results</h1>

<table class="table table-bordered table-hover table-striped text-center">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Degree</th>
            <th>MinDegree</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
               
                <td>@item.Degree</td>
                <td>@item.MinDegree</td>
                <td>@(item.Department != null ? item.Department.Name : "N/A")</td>
                
                <td>
                    <a asp-action="Edit" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏ Edit</a>
                    <a asp-action="Remove" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this instructor?')">🗑 Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" asp-controller="Course" class="btn btn-primary"> Return To Index </a>