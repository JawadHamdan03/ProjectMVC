@model List<Instructor>
@{
    ViewData["Title"] = "Instructors List";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Instructors List</h1>

    <div class="d-flex justify-content-between mb-3">
        <a href="/Instructor/Add" class="btn btn-success">➕ Add Instructor</a>
    </div>

    <!-- Search Form -->
    <form action="/Instructor/Search" method="post" class="input-group mb-4 w-50 mx-auto">
        <input name="Name" type="text" class="form-control" placeholder="Search by Name..." required />
        <button type="submit" class="btn btn-primary">🔍 Search</button>
    </form>

    <table class="table table-bordered table-hover table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Salary</th>
                <th>Address</th>
                <th>Department</th>
                <th>Course</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <img src="/images/@item.ImageURL" class="rounded-circle border" style="width:40px; height:40px;" />
                    </td>
                    <td>@item.Salary</td>
                    <td>@item.Address</td>
                    <td>@(item.Department != null ? item.Department.Name : "N/A")</td>
                    <td>@(item.Course != null ? item.Course.Name : "N/A")</td>
                    <td>
                        <a href="/Instructor/Edit/@item.Id" class="btn btn-warning btn-sm">✏ Edit</a>
                        <a href="/Instructor/Remove/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this instructor?')">🗑 Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
